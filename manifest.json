{
    "name": "JSON Editor",
    "version": "1.1",
    "description": "Simple Json Editor",
    "manifest_version": 3,
    "author": "Rishi",
    "permissions": [
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "res/img/16.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.github.com/*.json",
                "https://*.github.com/*.json"
            ],
            "js": [
                "insert.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "res/img/16.png",
        "32": "res/img/32.png",
        "48": "res/img/48.png",
        "128": "res/img/128.png"
    }
}